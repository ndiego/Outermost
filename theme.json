{
	"version": 2,
	"customTemplates": [
		{
			"name": "blank",
			"title": "Blank",
			"postTypes": [
				"page",
				"post",
				"article"
			]
		},
		{
			"name": "landing",
			"title": "Landing Page",
			"postTypes": [
				"page",
				"post",
				"article"
			]
		},
		{
			"name": "account",
			"title": "Account Template",
			"postTypes": [ "page" ]
		}
	],
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"name": "Primary",
					"slug": "primary",
					"color": "#121212"
				},
				{
					"name": "Secondary",
					"slug": "secondary",
					"color": "#8c8c8c"
				},
				{
					"name": "Tertiary",
					"slug": "tertiary",
					"color": "#c8ccd0"
				},
				{
					"name": "Backgrounds",
					"slug": "backgrounds",
					"color": "#f1f1f1"
				},
				{
					"name": "Borders",
					"slug": "borders",
					"color": "#dddddd"
				},
				{
					"name": "Links",
					"slug": "links",
					"color": "#f73a11"
				}
			]
		},
		"custom": {
			"line-height": {
				"body": 1.6,
				"heading": 1.2,
				"page-title": 1.1
			},
			"spacing": {
				"horizontal": "30px"
			},
			"opacity": {
				"link": 0.7,
				"button": 0.7
			}
		},
		"layout": {
			"contentSize": "736px",
			"wideSize": "1120px"
		},
		"spacing": {
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
					"slug": "system-font",
					"name": "System Font"
				},
				{
					"fontFamily": "Menlo, Monaco, Consolas, Liberation Mono, Courier New, monospace",
					"slug": "monospace-code",
					"name": "Monospace (Code)"
				}
			],
			"fontSizes": [
				{
					"name": "Extra small",
					"slug": "extra-small",
					"size": "12px"
				},
				{
					"name": "Small",
					"slug": "small",
					"size": "16px"
				},
				{
					"name": "Normal",
					"slug": "normal",
					"size": "18px"
				},
				{
					"name": "Large",
					"slug": "large",
					"size": "28px"
				},
				{
					"name": "Extra large",
					"slug": "extra-large",
					"size": "36px"
				},
				{
					"name": "Really large",
					"slug": "really-large",
					"size": "48px"
				},
				{
					"name": "Huge",
					"slug": "huge",
					"size": "96px"
				},
				{
					"name": "Gigantic",
					"slug": "gigantic",
					"size": "120px"
				}
			]
		}
	},
	"styles": {
		"spacing": {
			"blockGap": "2.5rem"
		},
		"color": {
			"background": "#ffffff",
			"text": "var(--wp--preset--color--primary)"
		},
		"typography": {
			"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
			"lineHeight": "var(--wp--custom--line-height--body)",
			"fontSize": "var(--wp--preset--font-size--normal)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--links)"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "calc(1.2 * var(--wp--preset--font-size--extra-large))",
					"fontWeight": 600,
					"lineHeight": "var(--wp--custom--line-height--heading)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--extra-large)",
					"fontWeight": 600,
					"lineHeight": "var(--wp--custom--line-height--heading)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": 600,
					"lineHeight": "var(--wp--custom--line-height--heading)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "calc(1.2 * var(--wp--preset--font-size--normal))",
					"fontWeight": 600,
					"lineHeight": "var(--wp--custom--line-height--heading)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)",
					"fontWeight": 600,
					"lineHeight": "var(--wp--custom--line-height--heading)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": 600,
					"lineHeight": "var(--wp--custom--line-height--heading)"
				}
			}
		},
		"blocks": {
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--primary)"
				},
				"border": {
					"radius": "4px"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": 600
				}
			},
			"core/code": {
				"color": {
					"background": "var(--wp--preset--color--backgrounds)",
					"text": "var(--wp--preset--color--primary)"
				},
				"border": {
					"radius": "4px"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--monospace-code)",
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/post-featured-image" : {
				"border": {
					"radius": "4px"
				}
			},
			"core/search": {
				"border": {
					"radius": "4px"
				}
			},

			"core/navigation": {
				"elements": {
					"link": {
						"typography": {
							"fontWeight": "normal"
						}
					}
				}
			},

			"core/paragraph": {
				"elements": {
					"code": {
						"typography": {
							"fontWeight": 600
						}
					}
				}
			},

			"core/post-title": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--primary)"
						}
					}
				}
			},
			"core/post-author": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/post-date": {
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": 1.2
				}
			},
			"core/post-terms": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--extra-small)"
				}
			},
			"core/post-tags": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--extra-small)"
				}
			},
			"core/separator": {
				"color": {
					"background": "var(--wp--preset--color--borders)"
				}
			},
			"core/social-links": {
				"spacing": {
					"blockGap": "1rem"
				}
			},
			"core/site-title": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--primary)"
						}
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"core/site-tagline": {
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": 1.4
				}
			}
		}
	}
}
