{
	"customTemplates": {
		"freeform": {
			"title": "Freeform",
			"description": "Template only includes the site header and footer, the rest is up to you!",
			"postTypes": [
				"post",
				"page"
			]
		},
        "landing": {
            "title": "Landing",
			"description": "Template is empty, no header, no footer, nothing...",
            "postTypes": [
				"post",
				"page"
            ]
        }
	},
	"settings": {
		"defaults": {
			"border": {
				"customRadius": true
			},
			"color": {
				"custom": true,
				"customGradient": true,
				"gradients": [ ],
				"link": true,
				"palette": [
					{
						"slug": "primary",
						"color": "#121212",
						"name": "Primary"
					},
					{
						"slug": "secondary",
						"color": "#8c8c8c",
						"name": "Secondary"
					},
					{
						"slug": "tertiary",
						"color": "#c8ccd0",
						"name": "Tertiary"
					},
					{
						"slug": "background",
						"color": "#f1f1f1",
						"name": "Background"
					},
					{
						"slug": "border",
						"color": "#dddddd",
						"name": "Border"
					}
				]
			},
			"custom": {
				"line-height": {
					"body": 1.7,
					"heading": 1.2,
					"page-title": 1.1,
					"meta": 1.2
				},
				"responsive": {
					"aligndefault-width": "736px",
					"alignwide-width": "1120px"
				},
				"spacing": {
					"horizontal": "30px"
				}
			},
			"spacing": {
				"customPadding": true,
				"units": [ "px", "em", "rem", "vh", "vw" ]
			},
			"typography": {
				"customFontSize": true,
				"customFontStyle": true,
				"customFontWeight": true,
				"customLineHeight": true,
				"dropCap": true,
				"fontFamilies": [
					{
						"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
						"slug": "system-font",
						"name": "System Font"
					},
					{
						"fontFamily": "Roboto, sans-serif",
						"slug": "roboto",
						"name": "Roboto (Google Font)"
					},
					{
						"fontFamily": "Helvetica Neue, Helvetica, Arial, sans-serif",
						"slug": "helvetica-arial",
						"name": "Helvetica Neue"
					},
					{
						"fontFamily": "Geneva, Tahoma, Verdana, sans-serif",
						"slug": "geneva-verdana",
						"name": "Geneva"
					},
					{
						"fontFamily": "monospace",
						"slug": "monospace-code",
						"name": "Monospace (Code)"
					}
				],
				"fontSizes": [
					{
						"slug": "extra-small",
						"size": "12px",
						"name": "Extra small"
					},
					{
						"slug": "small",
						"size": "16px",
						"name": "Small"
					},
					{
						"slug": "normal",
						"size": "20px",
						"name": "Normal"
					},
					{
						"slug": "large",
						"size": "24px",
						"name": "Large"
					},
					{
						"slug": "extra-large",
						"size": "36px",
						"name": "Extra large"
					},
					{
						"slug": "huge",
						"size": "96px",
						"name": "Huge"
					},
					{
						"slug": "gigantic",
						"size": "120px",
						"name": "Gigantic"
					}
				],
				"fontStyles": [
					{
						"slug": "normal",
						"value": "normal",
						"name": "Normal"
					},
					{
						"slug": "italic",
						"value": "italic",
						"name": "Italic"
					}
				],
				"fontWeights": [
					{
						"slug": "light",
						"value": 300,
						"name": "Light"
					},
					{
						"slug": "normal",
						"value": "normal",
						"name": "Normal"
					},
					{
						"slug": "medium",
						"value": 500,
						"name": "Medium"
					},
					{
						"slug": "semibold",
						"value": 600,
						"name": "Semibold"
					},
					{
						"slug": "bold",
						"value": 700,
						"name": "Bold"
					}
				]
			}
		}
	},
	"styles": {
		"root": {
			"color": {
				"text": "var(--wp--preset--color--primary)",
				"link": "var(--wp--preset--color--primary)"
			},
			"typography": {
				"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
				"lineHeight": "var(--wp--custom--line-height--body)",
				"fontSize": "var(--wp--preset--font-size--normal)"
			}
		},
		"core/heading/h1": {
			"typography": {
				"fontSize": "calc(1.4 * var(--wp--preset--font-size--extra-large))",
				"lineHeight": "var(--wp--custom--line-height--heading)"
			}
		},
		"core/heading/h2": {
			"typography": {
				"fontSize": "var(--wp--preset--font-size--extra-large)",
				"lineHeight": "var(--wp--custom--line-height--heading)"
			}
		},
		"core/heading/h3": {
			"typography": {
				"fontSize": "calc(1.25 * var(--wp--preset--font-size--large))",
				"lineHeight": "var(--wp--custom--line-height--heading)"
			}
		},
		"core/heading/h4": {
			"typography": {
				"fontSize": "var(--wp--preset--font-size--large)",
				"lineHeight": "var(--wp--custom--line-height--heading)"
			}
		},
		"core/heading/h5": {
			"typography": {
				"fontSize": "var(--wp--preset--font-size--small)",
				"lineHeight": "var(--wp--custom--line-height--heading)"
			}
		},
		"core/heading/h6": {
			"typography": {
				"fontSize": "var(--wp--preset--font-size--extra-small)",
				"lineHeight": "var(--wp--custom--line-height--heading)"
			}
		},
		"core/image": {
			"border": {
				"radius": "4px"
			}
		},
		"core/post-title/h1": {
			"typography": {
				"fontSize": "calc(1.4 * var(--wp--preset--font-size--extra-large))",
				"lineHeight": "var(--wp--custom--line-height--heading)"
			}
		},
		"core/post-author": {
			"typography": {
				"fontSize": "var(--wp--preset--font-size--small)",
				"lineHeight": "var(--wp--custom--line-height--meta)"
			}
		},
		"core/post-date": {
			"color": {
				"text": "var(--wp--preset--color--secondary)"
			},
			"typography": {
				"fontSize": "var(--wp--preset--font-size--small)",
				"lineHeight": "var(--wp--custom--line-height--meta)"
			}
		},
		"core/post-hierarchical-terms": {
			"typography": {
				"fontSize": "var(--wp--preset--font-size--extra-small)",
				"lineHeight": "var(--wp--custom--line-height--meta)"
			}
		},
		"core/post-tags": {
			"typography": {
				"fontSize": "var(--wp--preset--font-size--extra-small)",
				"lineHeight": "var(--wp--custom--line-height--meta)"
			}
		},
		"core/site-tagline": {
			"color": {
				"text": "var(--wp--preset--color--secondary)"
			},
			"typography": {
				"fontSize": "var(--wp--preset--font-size--small)",
				"lineHeight": 1.4
			}
		},
		"core/site-title": {
			"typography": {
				"fontSize": "var(--wp--preset--font-size--large)"
			}
		}
	}
}
