	"styles": {
		"root": {
			"color": {
				"text": "var(--wp--preset--color--primary)",
				"link": "var(--wp--preset--color--primary)"
			},
			"typography": {
				"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
				"lineHeight": "var(--wp--custom--line-height--body)",
				"fontSize": "var(--wp--preset--font-size--normal)"
			}
		},
		"core/heading/h1": {
			"typography": {
				"fontSize": "calc(1.2 * var(--wp--preset--font-size--extra-large))",
				"lineHeight": "var(--wp--custom--line-height--heading)"
			}
		},
		"core/heading/h2": {
			"typography": {
				"fontSize": "var(--wp--preset--font-size--extra-large)",
				"lineHeight": "var(--wp--custom--line-height--heading)"
			}
		},
		"core/heading/h3": {
			"typography": {
				"fontSize": "var(--wp--preset--font-size--large)",
				"lineHeight": "var(--wp--custom--line-height--heading)"
			}
		},
		"core/heading/h4": {
			"typography": {
				"fontSize": "calc(1.2 * var(--wp--preset--font-size--normal))",
				"lineHeight": "var(--wp--custom--line-height--heading)"
			}
		},
		"core/heading/h5": {
			"typography": {
				"fontSize": "var(--wp--preset--font-size--normal)",
				"lineHeight": "var(--wp--custom--line-height--heading)"
			}
		},
		"core/heading/h6": {
			"typography": {
				"fontSize": "var(--wp--preset--font-size--small)",
				"lineHeight": "var(--wp--custom--line-height--heading)"
			}
		},
		"core/image": {
			"border": {
				"radius": "4px"
			}
		},
		"core/post-title/h1": {
			"typography": {
				"fontSize": "calc(1.2 * var(--wp--preset--font-size--extra-large))",
				"lineHeight": "var(--wp--custom--line-height--heading)"
			}
		},
		"core/post-author": {
			"typography": {
				"fontSize": "var(--wp--preset--font-size--small)"
			}
		},
		"core/post-date": {
			"color": {
				"text": "var(--wp--preset--color--secondary)"
			},
			"typography": {
				"fontSize": "var(--wp--preset--font-size--small)"
			}
		},
		"core/post-terms": {
			"typography": {
				"fontSize": "var(--wp--preset--font-size--extra-small)"
			}
		},
		"core/post-tags": {
			"typography": {
				"fontSize": "var(--wp--preset--font-size--extra-small)"
			}
		},
		"core/site-tagline": {
			"color": {
				"text": "var(--wp--preset--color--secondary)"
			},
			"typography": {
				"fontSize": "var(--wp--preset--font-size--small)",
				"lineHeight": 1.4
			}
		},
		"core/site-title": {
			"typography": {
				"fontSize": "var(--wp--preset--font-size--large)"
			}
		}
